<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiBrokenEditoriOS.Views.EditorAutoGrowPage"
    Title="EditorAutoGrowPage">
    <VerticalStackLayout>
        <Label Text="Editor in VerticalStack with AutoSize to TextChanges, grows to the extent of the page but can never scroll"/>  
        <Editor 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            AutoSize="TextChanges"/>
    </VerticalStackLayout>
</ContentPage>
